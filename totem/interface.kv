#:kivy 1.0

<Interface>:
    Screen:
        name: '0' #Usar numeros faz ficar mais facil fazer comparações depois
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Lorem ipsum'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Começar'
                    on_release: root.proximaTela()
    Screen:
        name: '1'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: '"Tosse seca" é um dos seus sintomas?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(0,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '2'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Você sentiu "Febre alta" por mais de 5 dias?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(1,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()
    Screen:
        name: '3'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Você está sentindo dificuldade em respirar?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(2,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()
    Screen:
        name: '4'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: '"Diarreia" é um dos seus sintomas?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(3,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()
    Screen:
        name: '5'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Recentemente você teve contato com alguem com Covid?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(4,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '6'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Pergunta 2'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.addPontos(20); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '7' #fim
        BoxLayout:
            orientation: 'vertical'
            Label: 
                id: result
                text: 'Resultado'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Recomeçar'
                    on_release: root.proximaTela(); 

<BoxLayout>
    padding: 50
    spacing: 50
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

<Button>
    background_normal: ''
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: 0,0,1
        Line:
            width: 5
            rectangle: self.x, self.y, self.width, self.height

<Label>
    halign: 'center'
    valign: 'middle'
    font_size:'50sp'
    color: [0,0,0,1]