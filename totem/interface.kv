                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(3,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()
    Screen:
        name: '5'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Recentemente você teve contato com alguém com Covid?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(4,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '6'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                halign: 'left'
                text:
                    'Você esta sentindo algum desses sintomas? \n' +\
                    '-Comprometimento da via aérea \n' +\
                    '-Respiração ineficaz \n' +\
                    '-Choque \n' +\
                    '-Criança não responde'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.addPontos(50); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '7'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                halign: 'left'
                text:
                    'Você esta sentindo algum desses sintomas? \n' +\
                    '-Dor severa? \n' +\
                    '-Hemorragia Grande incontrolável \n' +\
                    '-Criança quente \n' +\
                    'Ou há alguma alteração do nível de consciência?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.addPontos(31); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '8'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                halign: 'left'
                text:
                    'Você esta sentindo algum desses sintomas? \n' +\
                    '-Dor moderada? \n' +\
                    '-Pequena hemorragia incontrolável? \n' +\
                    '-Vômitos persistentes?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.addPontos(21); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()
    Screen:
        name: '9'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                halign: 'left'
                text:
                    'Você esta sentindo algum desses sintomas? \n' +\
                    '-Dor \n' +\
                    '-Vômitos \n' +\
                    'Ou seu problema é antigo?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.addPontos(11); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.addPontos(1); root.proximaTela()

    Screen:
        name: '10' #fim
        BoxLayout:
            orientation: 'vertical'
            Label: 
                id: result
                text: 'Resultado'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Recomeçar'
                    on_release: root.proximaTela(); 

<BoxLayout>
    padding: 50
    spacing: 50
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

<Button>
    background_normal: ''
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: 0,0,1
        Line:
            width: 5
            rectangle: self.x, self.y, self.width, self.height

<Label>
    halign: 'center'
    valign: 'middle'
    font_size:'50sp'
    color: [0,0,0,1]