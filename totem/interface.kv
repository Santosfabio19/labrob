#:kivy 1.0

<Interface>:
    Screen:
        name: '0' #Usar números faz ficar mais fácil fazer comparações depois
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Lorem ipsum'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Começar'
                    on_release: root.proximaTela()
    Screen:
        name: '1'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: '"Tosse seca" é um dos seus sintomas?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(0,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '2'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Você sentiu "Febre alta" por mais de 5 dias?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(1,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()
    Screen:
        name: '3'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Você está sentindo dificuldade em respirar?'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.atualizarCovid(2,True); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()
    Screen:
        name: '4'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: '"Diarreia" é um dos seus sintomas?'
