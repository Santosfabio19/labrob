<Interface>:
    Screen:
        name: '0' #Usar numeros faz ficar mais facil fazer comparações depois
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Lorem Ipsulum'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Começar'
                    on_release: root.proximaTela()
    Screen:
        name: '1'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Pergunta 1'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.addPontos(20); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '2'
        BoxLayout:
            orientation: 'vertical'
            Label: 
                text: 'Pergunta 2'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Sim'
                    on_release: root.addPontos(20); root.proximaTela()
                Button:
                    text: 'Não'
                    on_release: root.proximaTela()

    Screen:
        name: '3' #fim
        BoxLayout:
            orientation: 'vertical'
            Label: 
                id: result
                text: 'Resultado'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Recomeçar'
                    on_release: root.proximaTela(); 

<BoxLayout>
    padding: 50
    spacing: 50
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

<Button>
    background_normal: ''
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: 0,0,1
        Line:
            width: 5
            rectangle: self.x, self.y, self.width, self.height

<Label>
    halign: 'center'
    valign: 'middle'
    font_size:'50sp'
    color: [0,0,0,1]